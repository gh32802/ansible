[Unit]
Description=JBOSS-JDG Instance {{ jdg_instance_name }}
After=network.target

[Service]
Type=forking
WorkingDirectory={{ wxx_dirs.app_dir }}/{{ jdg_instance_name }}/bin
User={{ jdg_user }}
ExecStart=/bin/bash {{ wxx_dirs.app_dir }}/{{ jdg_instance_name }}/bin/proc.sh start
ExecStop=/bin/bash {{ wxx_dirs.app_dir }}/{{ jdg_instance_name }}/bin/proc.sh stop
ExecRestart=/bin/bash {{ wxx_dirs.app_dir }}/{{ jdg_instance_name }}/bin/proc.sh restart

[Install]
WantedBy=multi-user.target