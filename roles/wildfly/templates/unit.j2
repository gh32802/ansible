[Unit]
Description=WILDFLY Instance {{ wildfly_instance_name }}
After=network.target

[Service]
Type=forking
WorkingDirectory={{ wxx_dirs.app_dir }}/{{ wildfly_instance_name }}/bin
User={{ wildfly_user }}
ExecStart=/bin/bash {{ wxx_dirs.app_dir }}/{{ wildfly_instance_name }}/bin/proc.sh start
ExecStop=/bin/bash {{ wxx_dirs.app_dir }}/{{ wildfly_instance_name }}/bin/proc.sh stop
ExecRestart=/bin/bash {{ wxx_dirs.app_dir }}/{{ wildfly_instance_name }}/bin/proc.sh restart

[Install]
WantedBy=multi-user.target
